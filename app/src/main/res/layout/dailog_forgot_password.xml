<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/dialogRoundedBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/merriweathersans_semibold"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="@string/forgot_password"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <!-- Subtitle -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/please_enter_your_email_id_or_phone_number_to_which_we_will_send_a_recovery_link"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12ssp" />

        <!-- EditText for Email or Mobile -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etUsernameMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/form_et_1"
            android:fontFamily="@font/merriweathersans_regular"
            android:hint="@string/registered_email_id_mobile"
            android:inputType="text"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/_12ssp" />

        <!-- Horizontal Layout for Buttons -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- Send Link Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSendLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ca_button_selector_1"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/merriweathersans_medium"
                android:text="@string/send_link"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/_12ssp" />

            <!-- Cancel Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/merriweathersans_medium"
                android:text="@string/cancel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>