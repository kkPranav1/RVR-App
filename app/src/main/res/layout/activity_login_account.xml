<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp">

            <!-- Back arrow as ImageView -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foregroundTint="@color/black"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/back_arw" />

            <!-- Title -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfairdisplay_semibold"
                android:text="@string/login_btn_txt"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />

        </RelativeLayout>

        <!-- Username Label -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUsernameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/username"
            android:textColor="@color/green"
            android:textSize="@dimen/_12ssp" />

        <!-- Username Input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/form_et_1"
            android:fontFamily="@font/merriweathersans_semibold"
            android:hint="@string/registered_email_id_mobile"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/main_green"
            android:textColorHint="@color/grey" />

        <!-- Password -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/password"
            android:textColor="@color/green"
            android:textSize="@dimen/_12ssp" />

        <!-- Password Input -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/form_et_1"
            android:drawableEnd="@drawable/ic_eye_off"
            android:fontFamily="@font/merriweathersans_semibold"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/main_green"
            android:textColorHint="@color/grey" />


        <!-- Forgot Password Text -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/forgot_your_password"
            android:textColor="@color/green"
            android:textSize="@dimen/_10ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/ca_button_selector_1"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/login_btn_txt"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

        <!-- Or Sign-in using Text -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/signinTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/or_sign_in_using"
            android:textColor="@color/green"
            android:textSize="@dimen/_10ssp" />

        <!-- Google Sign-In Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/ic_google"
            android:fontFamily="@font/merriweathersans_regular"
            android:padding="@dimen/_6sdp"
            android:text="@string/sign_in_with_google"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="@dimen/_12ssp" />

        <!-- Info Text -->
        <TextView
            android:id="@+id/verifiedMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/make_sure_you_use_a_verified_email"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10ssp" />

        <!-- Register Text -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="@string/don_t_have_an_account_register"
            android:textColor="@color/green"
            android:textSize="@dimen/_12ssp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
